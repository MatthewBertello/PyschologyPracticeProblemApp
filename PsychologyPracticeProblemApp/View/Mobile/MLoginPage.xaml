<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PsychologyPracticeProblemApp.MLoginPage"
             Shell.NavBarIsVisible="False"
             xmlns:viewmodel="clr-namespace:PsychologyPracticeProblemApp"
             x:DataType="viewmodel:MLoginPage"
             BindingContext="{x:Reference MLoginPage}"
             >

    <Grid Style="{StaticResource TitleGrid}">
        <Rectangle Style="{StaticResource TitleRect}"/>
        <Label Text="Login" Style="{StaticResource Title}"/>

        <ScrollView Style="{StaticResource TitleInner}">
            <Grid RowDefinitions="*,*,*,*,*,*,*,*">
                <Label Grid.Row="0" Text="Statistics" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" FontSize="35"/>
                <Label Grid.Row="1" Text="Practice" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" FontSize="35"/>
                <Frame Grid.Row="2" Padding="10,0" VerticalOptions="CenterAndExpand">
                    <Entry TextColor="Black" Placeholder="Username" x:Name="UsernameEntry"/>
                </Frame>
                <Frame Grid.Row="3" Padding="10,0" VerticalOptions="CenterAndExpand">
                    <Entry TextColor="Black" Placeholder="Password" x:Name="PasswordEntry" IsPassword="True"/>
                </Frame>

                <Button Grid.Row="4" Text="Login" VerticalOptions="CenterAndExpand" Clicked="OnLogin"/>
                <Button Grid.Row="5" Text="Create Account" VerticalOptions="CenterAndExpand" Clicked="OnCreateAccount"/>
                <Button Grid.Row="6" Text="Use as guest" VerticalOptions="CenterAndExpand" Clicked="OnGuest"/>
                <Label Grid.Row="7" Text="{Binding ErrorMessage}" Style="{StaticResource Error}"/>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
