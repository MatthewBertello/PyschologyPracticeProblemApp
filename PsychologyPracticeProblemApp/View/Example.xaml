<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PsychologyPracticeProblemApp.Example"
             BackgroundColor="White">
    <ScrollView>


        <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand" Spacing="10" Padding="10">
                <Label FontFamily="OpenSansRegular" TextColor="Black"
    FontSize="30" Text="Example" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />
                <Image x:Name="ExampleImage" Source="defaultexample.png"  Aspect="AspectFit" HeightRequest="650" WidthRequest="1000" HorizontalOptions="Center" />
                <Button Clicked="OnCloseExampleClicked" BackgroundColor="lightBlue" Text="Close" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" HeightRequest="30" WidthRequest="100" />
            </StackLayout>

    </ScrollView>
</ContentPage>
