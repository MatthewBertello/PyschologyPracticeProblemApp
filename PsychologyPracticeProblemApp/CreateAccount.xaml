<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PsychologyPracticeProblemApp.CreateAccount"
             BackgroundColor="White">
            
    <ScrollView >
  <Grid RowDefinitions="5*, *, *, *, *, *, 6* " ColumnDefinitions="2*, *, 2*">
    <Label Grid.Row="1" Grid.Column="1" TextColor="Black" Text="Create Account" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Frame Grid.Row="2" Grid.Column="1" BorderColor="Black" BackgroundColor="Transparent" CornerRadius="5" Padding="10" VerticalOptions="CenterAndExpand"  Margin="10"  WidthRequest="300">
      <Entry TextColor="Black" Placeholder="Username" x:Name="UsernameEntry"/>
    </Frame>
            <Frame Grid.Row="3" Grid.Column="1" BorderColor="Black" BackgroundColor="Transparent" CornerRadius="5" Padding="10" VerticalOptions="CenterAndExpand"  Margin="10"  WidthRequest="300">
      <Entry TextColor="Black" Placeholder="Password" x:Name="PasswordEntry"/>
    </Frame>
    <Button Grid.Row="4" Grid.Column="1" TextColor="Black" BorderColor="Black" BackgroundColor="Blue" Text="Create Account" VerticalOptions="CenterAndExpand"  />
    <Button Grid.Row="5" Grid.Column="1" TextColor="Black" BorderColor="Black" BackgroundColor="Blue" Text="Cancel" VerticalOptions="Start"  />
        </Grid>

</ScrollView>

</ContentPage>
