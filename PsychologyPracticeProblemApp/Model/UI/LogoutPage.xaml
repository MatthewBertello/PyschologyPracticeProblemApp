<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PsychologyPracticeProblemApp.LogoutPage"
             BackgroundColor="White">
    <Border Padding="0" Margin="30" BackgroundColor="White" MaximumHeightRequest="200" MaximumWidthRequest="500"
            Stroke="Black" StrokeThickness="2">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="30"/>
        </Border.StrokeShape>
         <Grid RowDefinitions="*,*,*" Margin="5" >
                <Label Grid.Row ="0" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black" Text="Logout" FontSize="25" FontFamily="Roboto-Bold"/>
                <Label Grid.Row ="1" HorizontalOptions="Center" TextColor="Black" Text="Are you sure you want to logout?" FontFamily="Roboto-Light"/>
            <Grid Grid.Row = "2" ColumnDefinitions="*, 3*, *, 3*,*" >
                <Button Grid.Column="1" TextColor="Black" BackgroundColor="{StaticResource Tint}" BorderColor="Black" Text="Logout" FontSize="20" FontFamily="Roboto-Bold"/>
                <Button Grid.Column="3" TextColor="Black" BackgroundColor="{StaticResource Tint}" BorderColor="Black" Text="Cancel" FontSize="20" FontFamily="Roboto-Bold"/>
            </Grid>
        </Grid>
    </Border>
</ContentPage>
